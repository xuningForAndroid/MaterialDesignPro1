<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bessel_curve.BesselCurveActivity">
    <com.xn.materialdesignpro1.bessel_curve.indicator.DropViewPager
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@id/circleIndicator"
        android:id="@+id/viewpager"
        android:layout_alignParentTop="true">

    </com.xn.materialdesignpro1.bessel_curve.indicator.DropViewPager>
    <com.xn.materialdesignpro1.bessel_curve.indicator.DropIndicator
        android:id="@+id/circleIndicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:circle_color="@android:color/darker_gray"
        app:click_color="#fafafa"
        app:duration="800"
        app:radius="8dp"
        app:scale="0.5"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </com.xn.materialdesignpro1.bessel_curve.indicator.DropIndicator>
</RelativeLayout>